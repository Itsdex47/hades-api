# PostHog (Analytics)
POSTHOG_API_KEY=your_posthog_api_key

# ================================
# FEATURE FLAGS
# ================================
ENABLE_DEMO_MODE=true
ENABLE_KYC_BYPASS=false
ENABLE_BLOCKCHAIN_RAILS=true
ENABLE_TRADITIONAL_RAILS=true
ENABLE_HYBRID_ROUTING=true
ENABLE_COMPLIANCE_MONITORING=true

# ================================
# RATE LIMITING & PERFORMANCE
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_TIMEOUT_MS=30000
BLOCKCHAIN_CONFIRMATION_BLOCKS=12

# ================================
# WEBHOOK ENDPOINTS
# ================================
STRIPE_WEBHOOK_ENDPOINT=/webhooks/stripe
CIRCLE_WEBHOOK_ENDPOINT=/webhooks/circle
JUMIO_WEBHOOK_ENDPOINT=/webhooks/jumio
ELLIPTIC_WEBHOOK_ENDPOINT=/webhooks/elliptic

