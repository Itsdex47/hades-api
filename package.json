{
  "name": "starling-remittance-api",
  "version": "0.2.0",
  "description": "Multi-rail cross-border remittance infrastructure with blockchain and traditional payment rails",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate-wallet": "ts-node scripts/generateWallet.ts",
    "check-balance": "ts-node scripts/checkBalance.ts",
    "demo-payment": "ts-node scripts/demoPayment.ts",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "setup-apis": "ts-node scripts/setupApis.ts",
    "test-rails": "ts-node scripts/testPaymentRails.ts",
    "compliance-check": "ts-node scripts/complianceCheck.ts"
  },
  "keywords": [
    "fintech",
    "cross-border",
    "payments",
    "blockchain",
    "remittance",
    "stablecoin",
    "emerging-markets",
    "multi-rail",
    "compliance",
    "kyc",
    "aml"
  ],
  "author": "Starling Labs",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@circle-fin/circle-sdk": "^2.6.1",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.98.2",
    "@supabase/supabase-js": "^2.24.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stripe": "^14.9.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.4",
    "nodemon": "^3.1.10"
  },
  "optionalDependencies": {
    "@sentry/node": "^7.81.1",
    "alchemy-sdk": "^3.1.1",
    "posthog-node": "^3.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Itsdex47/starling-remittance-api.git"
  },
  "config": {
    "rails": {
      "stripe": "enabled",
      "circle": "enabled",
      "solana": "enabled",
      "hybrid": "enabled"
    },
    "compliance": {
      "jumio": "enabled",
      "elliptic": "enabled",
      "cube": "enabled"
    },
    "monitoring": {
      "sentry": "optional",
      "posthog": "optional"
    }
  }
}
